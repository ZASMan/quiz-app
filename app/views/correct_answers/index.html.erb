<p id="notice"><%= notice %></p>

<h1>Correct Answers</h1>

<table>
  <thead>
    <tr>
      <th>Correct answer text</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @correct_answers.each do |correct_answer| %>
      <tr>
        <td><%= correct_answer.correct_answer_text %></td>
        <td><%= correct_answer.question %></td>
        <td><%= link_to 'Show', correct_answer %></td>
        <td><%= link_to 'Edit', edit_correct_answer_path(correct_answer) %></td>
        <td><%= link_to 'Destroy', correct_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Correct Answer', new_correct_answer_path %>
